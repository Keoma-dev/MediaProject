@model MediaWeb.Models.TVShow.EpisodeCreateViewModel

    <form asp-controller="TVShow" asp-action="CreateEpisode" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class="form-group">
            <label asp-for="Summary"></label>
            <input class="form-control" asp-for="Summary" />
        </div>

        <div class="form-group">
            <label asp-for="Season"></label>
            <input class="form-control" asp-for="Season" />
        </div>

        <div class="form-group">
            <label asp-for="EpisodeNumber"></label>
            <input class="form-control" asp-for="EpisodeNumber" />
        </div>

        <button class="btn btn-primary" type="submit">Add Episode</button>
    </form>