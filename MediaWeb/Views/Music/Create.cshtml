@model MediaWeb.Models.Music.MusicCreateViewModel

<form asp-controller="Music" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input class="form-control" asp-for="ReleaseDate" />
    </div>

    <div class="form-group">
        <label asp-for="Song"></label>
        <input class="form-control" asp-for="Song" />
    </div>

    @if (Model.Genres.Count > 0)
    {
        <div class="form-group">
            <label>Select one or multiple of the following genres...</label>
            <select multiple class="form-control" asp-for="SelectedGenres" asp-items="@Model.Genres"></select>
        </div>
    }

    <div class="form-group">
        <label>... or create new genres.</label>
        <input class="form-control" asp-for="createdGenres" placeholder="Genre 1, genre 2, ..." />
    </div>

    <div class="form-group">
        <label>Artist(s):</label>
        <input class="form-control" asp-for="createdArtists" placeholder="Actor 1, actor 2,..." />
    </div>

    <button class="btn btn-primary" type="submit">Create Song</button>
</form>