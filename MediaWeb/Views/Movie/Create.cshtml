@model MediaWeb.Models.Movie.MovieCreateViewModel

    <form asp-controller="Movie" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input class="form-control" asp-for="ReleaseDate" type="date" />
        </div>

        <div class="form-group">
            <label asp-for="Summary"></label>
            <input class="form-control" asp-for="Summary" />
        </div>

        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" asp-for="Photo" />
        </div>

        @if (Model.Genres.Count > 0)
        {
            <div class="form-group">
                <label>Select one or multiple of the following genres...</label>
                <select multiple class="form-control" asp-for="SelectedGenres" asp-items="@Model.Genres"></select>
            </div>
        }

        <div class="form-group">
            <label>... or create new genres.</label>
            <input class="form-control" asp-for="createdGenres" placeholder="Genre 1, genre 2, ..." />
        </div>

        <div class="form-group">
            <label>Actor(s):</label>
            <input class="form-control" asp-for="createdActors" placeholder="Actor 1, actor 2,..." />
        </div>

        <div class="form-group">
            <label>Director(s):</label>
            <input class="form-control" asp-for="createdDirectors" placeholder="Director 1, director2, ..." />
        </div>

        <button class="btn btn-primary" type="submit">Create Movie</button>
    </form>